{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "train",
            "type": "debugpy",
            "request": "launch",
            "module": "gaussian_splatting_mcmc.train",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "-s",
                "data/truck",
                "-d",
                "output/truck",
                "-i",
                "30000",
                "--mode",
                "camera",
            ]
        },
        {
            "name": "train reduced",
            "type": "debugpy",
            "request": "launch",
            "module": "gaussian_splatting_mcmc.train",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "-s",
                "data/truck",
                "-d",
                "output/truck",
                "-i",
                "30000",
                "--mode",
                "camera-densify-pruning-shculling",
                "-oopacity_reg_weight=0",
                "-oscale_reg_weight=0",
                "-omercy_type='redundancy_opacity_opacity'",
                "-orelocate_from_iter=15000",
                "-orelocate_until_iter=25000",
                "-orelocate_interval=100",
                "-ocap_max=250000",
            ],
            "env": {
                "CUDA_LAUNCH_BLOCKING": "1"
            }
        },
        {
            "name": "render",
            "type": "debugpy",
            "request": "launch",
            "module": "gaussian_splatting.render",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "-s",
                "data/truck",
                "-d",
                "output/truck",
                "-i",
                "30000",
                "--load_camera",
                "output/truck/cameras.json",
            ]
        },
    ]
}